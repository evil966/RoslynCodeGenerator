<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

	<ItemGroup>
		<!-- Include all SQL files for generator -->
		<AdditionalFiles Include="Sql/**/*.sql" />
	</ItemGroup>

	<ItemGroup>
	  <AdditionalFiles Remove="Sql\Reports\GetById.sql" />
	</ItemGroup>

	<ItemGroup>
	  <Resource Include="Sql\Reports\Sales\Monthly.sql" />
	</ItemGroup>
	
  <ItemGroup>
    <ProjectReference Include="..\SourceGenerator\SourceGenerator.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="false" />
  </ItemGroup>

</Project>
